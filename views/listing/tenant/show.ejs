<% include ../../partials/header %> 

<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">

<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>

<link rel="stylesheet" href="/stylesheets/landlord_show_style.css">

<div class="row">
  <div class="col-3" style="height: 500px; margin-left: 30px; border:none;">
  <img src="/public/user_resources/pictures/tenant/<%=listing_info.listing.profile_pictures[0].path.split("/")[listing_info.listing.profile_pictures[0].path.split("/").length-1]%>" align="right" style="width:100%; max-height:100%; object-fit: cover; object-position: 100% 0%;">
  <div class="border border-top-0" style="text-align: center; background-color:#FFFFFF;"> <%=listing_info.listing.profile_pictures[0].caption%> </div> 

  </div>

  <div class="col-5 border" style="border-style:none !important; height: 500px; margin-left: 30px;">
  <div class="sub_title" style="text-align: center; margin-top: 20px !important;">
        Self-introduction
  </div>
  <div class="_1ezjrwzo" style="margin-top: 20px !important">
  <%=listing_info.listing.rental_description%>
  </div>
  </div>

  <div class="col-3 wooden_background border" style="text-align: center;border-style:none !important; height: 500px; margin-left: 30px;">

  <div class="sub_title" style="margin-top: 20px !important;">
        Preferred Location
  </div>
  <div class="_1ezjrwzo">
  <%=listing_info.listing.location.city%>, <%=listing_info.listing.location.state%>, <%=listing_info.listing.location.country%>, <%=listing_info.listing.location.zipcode%>
  </div>

  <div class="sub_title" style="margin-top: 20px !important;">
        Budget
  </div>
  <div class="_1ezjrwzo">
  $<%=listing_info.listing.rental_budget%>.00
  </div>

  <div class="sub_title" style="margin-top: 20px !important;">
        Move-in Date
  </div>
  <div class="_1ezjrwzo">
  <%=listing_info.listing.move_in_date.month%>/<%=listing_info.listing.move_in_date.date%>/<%=listing_info.listing.move_in_date.year%>
  </div>

  <div class="sub_title" style="margin-top: 20px !important;">
        Rental Duration
  </div>
  <div class="_1ezjrwzo">
  <%=listing_info.listing.rental_duration%> months
  </div>

  <div class="sub_title" style="margin-top: 20px !important;">
        Preferred rental unit type
  </div>
  <div class="_1ezjrwzo">
  <%=listing_info.listing.rental_preferences.rental_unit_type%>
  </div>

  <div class="sub_title" style="margin-top: 20px !important;">
        Number of rooms or Whole Unit?
  </div>
  <div class="_1ezjrwzo">
  <%if(listing_info.listing.rental_preferences.rent_whole_unit=="off") {%>
  	<%=listing_info.listing.rental_preferences.num_of_rooms%> bedroom<%if(listing_info.listing.rental_preferences.num_of_rooms>1) {%>s<%}%>
  	<%} else {%>
  		Whole Unit
  	<%}%>

  </div>

  <%if(listing_info.listing.num_of_requested_roommates>0) {%>

  <div class="sub_title" style="margin-top: 20px !important;">
        Additional tenant?
  </div>
  <div class="_1ezjrwzo">
  <%=listing_info.listing.num_of_requested_roommates%>
  </div>

  <%}%>

  </div>

</div>

<!--<div class="container border" style="border-style: none !important; margin-top: 20px; margin-left: 100px; margin-right: 100px;">-->
<div class="container border" style="border-style: none !important; margin-top: 40px;">
  
  <hr>
  <div class="_1xzp5ma3">
    Retal Preferences
  </div>

  <div class="wooden_background border rounded-top rounded-bottom" style="margin-top: 20px;">
    <div class="row sub_title" style="padding-top:8px; !important">
    
    <% for (var preferenceIndex=0; preferenceIndex<listing_info.rentalPreferences.length; preferenceIndex++) {%>
        <% if ((preferenceIndex%3)==0) {%>
          <div class="col-4">
            <ul>
          <%}%>
          <li><%=listing_info.rentalPreferences[preferenceIndex];%></li>
         <%if ((preferenceIndex==2) || (preferenceIndex==5) || (preferenceIndex==listing_info.rentalPreferences.length-1)) {%>
            </ul>
          </div>
          <%}%>
        <%}%>

    </div>
  </div> <!--Preferences-->


  <hr>
  <div class="_1xzp5ma3" style="margin-top:40px; margin-left:200px;">
    Mutual Friends
  </div>

  <div class="row" style="margin-top: 30px;">
    <div class="col-7 wooden_background border rounded-top rounded-bottom" style="">

    <div class="row">
    
    <div class="col-3">
      <div class=" thumbnail" background-color:#f2f2f2;>
        <img class="img-responsive center rounded-circle" src="Chinh - Vy.jpg">
        <div class="caption-full ">
          <h4 class="inner_contents" style="text-align:center !important;"> Chinh Le</h4>
          <p></p>
        </div>
      </div>
    </div>

    <div class="col-3">
      <div class=" thumbnail" background-color:#f2f2f2;>
        <img class="img-responsive center rounded-circle" src="Peter.jpg">
        <div class="caption-full ">
          <h4 class="inner_contents" style="text-align:center !important;"> Peter Bae</h4>
          <p></p>
        </div>
      </div>
    </div>

    <div class="col-3">
      <div class=" thumbnail" background-color:#f2f2f2;>
        <img class="img-responsive center rounded-circle" src="sungjoon.jpg">
        <div class="caption-full ">
          <h4 class="inner_contents" style="text-align:center !important;"> Sungjoon Ahn</h4>
          <p></p>
        </div>
      </div>
    </div>

    <div class="col-3">
      <div class=" thumbnail" background-color:#f2f2f2;>
        <img class="img-responsive center rounded-circle" src="Jason.jpg">
        <div class="caption-full ">
          <h4 class="inner_contents" style="text-align:center !important;"> Jason Kim</h4>
          <p></p>
        </div>
      </div>
    </div>

    </div>

    </div>

    <div class="col-lg-4 sub_title wooden_background border rounded-top rounded-bottom" style="max-height:102px;text-align: center; margin-left: 80px !important; ">
      <div style="margin-top:10px;">Contact</div>
      <div class="sub_title" style="margin-top:10px !important;">
        <ul  style="list-style-type:none;">
          <li> Phone Number: <%=listing_info.listing.phone%> </li>
          <li> E-mail: <%=listing_info.listing.email%> </li>
        </ul>
      </div>
  </div>
</div>
  <hr>
</div>

<% include ../../partials/footer %> 